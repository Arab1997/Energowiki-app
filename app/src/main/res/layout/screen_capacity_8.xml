<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/screenStyle"
    tools:ignore="HardcodedText"
    android:padding="8dp"
    android:background="#F4F4F4"
    android:layout_height="match_parent">

    <include layout="@layout/content_header" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="#F4F4F4"
        android:padding="2dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="2dp"
                android:background="#F4F4F4"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="Емкость"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:id="@+id/capacity_screen8_result1"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="2dp"
                android:background="#F4F4F4"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="Разряденый резистор"
                    android:textSize="14dp"
                    android:lines="1"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:id="@+id/capacity_screen8_result2"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:padding="2dp"
                android:background="#F4F4F4"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="Мошность"
                    android:textSize="14dp"
                    android:lines="1"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:id="@+id/capacity_screen8_result3"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="50"
            android:text="Частота"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>







        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="50"
            android:background="@drawable/spinner_back"
            android:layout_height="40dp">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:id="@+id/spinner_capacity_screen8_1"
                android:gravity="center"
                android:layout_height="40dp"/>


        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="45"
            android:text="Напражение вход"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/back_of_input"
            android:lines="1"
            android:padding="4dp"
            android:id="@+id/input_capacity_screen8_1"
            android:inputType="number"
            android:textColorHint="#000"
            android:outlineSpotShadowColor="#fff"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:textColor="#000" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="30"
            android:text="Вольт"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="45"
            android:text="Напражение вход"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/back_of_input"
            android:lines="1"
            android:padding="4dp"
            android:id="@+id/input_capacity_screen8_2"
            android:inputType="number"
            android:textColorHint="#000"
            android:outlineSpotShadowColor="#fff"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:textColor="#000" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="30"
            android:text="Вольт"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="45"
            android:text="Нагрузка"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/back_of_input"
            android:lines="1"
            android:padding="4dp"
            android:id="@+id/input_capacity_screen8_3"
            android:inputType="number"
            android:textColorHint="#000"
            android:outlineSpotShadowColor="#fff"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:textColor="#000" />


        <Spinner
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:id="@+id/spinner_capacity_screen8_2"
            android:gravity="center"
            android:layout_height="wrap_content"/>



    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/clear_bt_capacity_screen8"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_yellow_cart"
            android:gravity="center"
            android:text="Сброс"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/result_bt_capacity_screen8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_green_cart"
            android:gravity="center"
            android:text="Отчёт"
            android:padding="4dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>






</LinearLayout>