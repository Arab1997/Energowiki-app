<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle"
    android:paddingTop="15dp"
    tools:ignore="HardcodedText">

    <include layout="@layout/content_header" />

    <LinearLayout
        style="@style/cardStyle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:padding="25dp">

        <TextView
            android:id="@+id/title"
            style="@style/baseStyle"
            android:fontFamily="@font/inter_bold"
            android:text="Длина"
            android:textColor="@color/dark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/input3Name"
            style="@style/baseStyle"
            android:layout_marginTop="20dp"
            android:text="t° проводника ( °C )"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/input3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="0"
                android:importantForAutofill="no"
                android:inputType="number"
                android:longClickable="false"
                android:maxLength="5"
                android:textColor="@color/black"
                android:textColorHint="@color/hint"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_weight="0.6"
                tools:listitem="@layout/item_spin" />

        </LinearLayout>

        <TextView
            android:id="@+id/input4Name"
            style="@style/baseStyle"
            android:layout_marginTop="20dp"
            android:text="Сечение"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/input4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="0"
                android:importantForAutofill="no"
                android:inputType="number"
                android:longClickable="false"
                android:maxLength="5"
                android:textColor="@color/black"
                android:textColorHint="@color/hint"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_weight="0.6"
                tools:listitem="@layout/item_spin" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/clearBtn"
            android:layout_width="98dp"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_yellow_cart"
            android:gravity="center"
            android:text="Сброс"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/resultBtn"
            android:layout_width="98dp"
            android:layout_height="44dp"
            android:background="@drawable/rounded_green_cart"
            android:gravity="center"
            android:text="Отчёт"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/baseStyle"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@color/hint" />

    <LinearLayout
        style="@style/baseStyle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@color/back">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/inter_medium"
            android:text="Результат расчета"
            android:textColor="@color/dark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="0 B"
            android:textColor="@color/dark"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>