<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle"
    android:paddingTop="15dp">

    <include layout="@layout/content_header" />

    <LinearLayout
        style="@style/cardStyle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:padding="25dp">

        <TextView
            style="@style/baseStyle"
            android:fontFamily="@font/inter_bold"
            android:text="Мощность"
            android:textColor="@color/dark"
            android:textSize="13sp" />

        <TextView
            style="@style/baseStyle"
            android:layout_marginTop="20dp"
            android:text="Ток"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/baseStyle"
                    android:hint="12"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="vertical">

                <Spinner
                    style="@style/baseStyle"
                    android:layout_gravity="bottom"
                    tools:listitem="@layout/item_spin" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hint" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/baseStyle"
            android:layout_marginTop="20dp"
            android:text="Напряжения"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/baseStyle"
                    android:hint="12"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:orientation="vertical">

                <Spinner
                    style="@style/baseStyle"
                    android:layout_gravity="end|bottom"

                    tools:listitem="@layout/item_spin" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/hint" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/baseStyle"
        android:layout_marginLeft="30dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerForm"
            style="@style/baseStyle"
            android:background="@color/back"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:itemCount="6"
            tools:listitem="@layout/item_form" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/report"
            android:layout_width="98dp"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_yellow_cart"
            android:text="Отчёт"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sbros"
            android:layout_width="98dp"
            android:layout_height="44dp"
            android:background="@drawable/rounded_green_cart"
            android:text="Сброс"
            android:textAllCaps="false"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/baseStyle"
        android:layout_height="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@color/hint"

        />

    <LinearLayout
        style="@style/baseStyle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:background="@color/back">

        <TextView
            style="@style/baseStyle"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="результат расчета"
            android:textColor="@color/dark"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/result1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="6 B"
            android:textColor="@color/dark"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>