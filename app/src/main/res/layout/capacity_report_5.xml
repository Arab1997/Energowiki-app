<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:text="Заряд и енергия"
                android:textColor="#000" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:padding="3dp"
                android:text="Q = C * U\nE = C * U * U / 2 "
                android:textColor="#000" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/capacity_report3_liner"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="#4BAF4F"
                    android:gravity="center|left"
                    android:padding="4dp"
                    android:text="Результат расчета"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <LinearLayout
                    android:background="@drawable/stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="40"
                        android:padding="3dp"
                        android:text="Заряд - Q "
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="60"
                        android:id="@+id/capacity_report5_text1"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="#000" />

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="40"
                        android:padding="3dp"
                        android:text="Енергия - E "
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="60"
                        android:id="@+id/capacity_report5_text2"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="#000" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:id="@+id/capacity_report3_liner"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="#4BAF4F"
                    android:gravity="center|left"
                    android:padding="4dp"
                    android:text="Данные для расчета"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <LinearLayout
                    android:background="@drawable/stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="40"
                        android:padding="3dp"
                        android:text="Напряжение"
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="60"
                        android:id="@+id/capacity_report5_text3"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="#000" />

                </LinearLayout>
                <LinearLayout
                    android:background="@drawable/stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="40"
                        android:padding="3dp"
                        android:text="Емкость "
                        android:textColor="#000" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="60"
                        android:id="@+id/capacity_report5_text4"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="#000" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>







    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/btn"
        android:weightSum="100"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="44dp"/>



        <Button
            android:id="@+id/capacity_report5_close"
            android:layout_width="0dp"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:background="@drawable/rounded_green_cart"
            android:gravity="center"
            android:text="Ok"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>