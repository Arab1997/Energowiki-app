<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/screenStyle"
    tools:ignore="HardcodedText"
    android:padding="8dp"
    android:background="#F4F4F4"
    android:layout_height="match_parent">

    <include layout="@layout/content_header" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="#F4F4F4"
        android:padding="2dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#F4F4F4"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Макс. длина : "
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/conductor_screen6_text1"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:gravity="center"
        android:padding="4dp"
        android:background="#F4F4F4"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:text="Материал"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_gravity="center"
            android:background="@drawable/spinner_back"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="60"
                android:layout_marginLeft="4dp"
                android:tooltipText="dddd"
                android:id="@+id/spinner_conductor_screen6_1"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_height="40dp"/>



        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:id="@+id/liner_1_capacity_screen4"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:text="t проводника"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/back_of_input"
            android:lines="1"
            android:padding="4dp"
            android:inputType="number"
            android:textColorHint="#000"
            android:outlineSpotShadowColor="#fff"
            android:layout_width="0dp"
            android:id="@+id/input_conductor_screen6_1"
            android:layout_weight="25"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:textColor="#000" />


        <Space
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:background="@drawable/spinner_back"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_marginLeft="4dp"
                android:tooltipText="dddd"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:id="@+id/spinner_conductor_screen6_2"
                android:gravity="center"
                android:layout_height="40dp"/>



        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:text="Напряжение"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/back_of_input"
            android:lines="1"
            android:padding="4dp"
            android:id="@+id/input_conductor_screen6_2"
            android:inputType="number"
            android:textColorHint="#000"
            android:outlineSpotShadowColor="#fff"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:textColor="#000" />


        <Space
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:background="@drawable/spinner_back"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_marginLeft="4dp"
                android:tooltipText="dddd"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:id="@+id/spinner_conductor_screen6_3"
                android:gravity="center"
                android:layout_height="40dp"/>



        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:text="Нагрузка"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/back_of_input"
            android:lines="1"
            android:padding="4dp"
            android:id="@+id/input_conductor_screen6_3"
            android:inputType="number"
            android:textColorHint="#000"
            android:outlineSpotShadowColor="#fff"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:textColor="#000" />


        <Space
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:background="@drawable/spinner_back"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_marginLeft="4dp"
                android:tooltipText="dddd"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:id="@+id/spinner_conductor_screen6_4"
                android:gravity="center"
                android:layout_height="40dp"/>



        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:text="Потери"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/back_of_input"
            android:lines="1"
            android:padding="4dp"
            android:id="@+id/input_conductor_screen6_4"
            android:inputType="number"
            android:textColorHint="#000"
            android:outlineSpotShadowColor="#fff"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:textColor="#000" />


        <Space
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:background="@drawable/spinner_back"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_marginLeft="4dp"
                android:tooltipText="dddd"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:id="@+id/spinner_conductor_screen6_5"
                android:gravity="center"
                android:layout_height="40dp"/>



        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:text="Сечение"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>


        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/back_of_input"
            android:lines="1"
            android:padding="4dp"
            android:id="@+id/input_conductor_screen6_5"
            android:inputType="number"
            android:textColorHint="#000"
            android:outlineSpotShadowColor="#fff"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:textColor="#000" />


        <Space
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:background="@drawable/spinner_back"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="0dp"
                android:layout_weight="30"
                android:layout_marginLeft="4dp"
                android:tooltipText="dddd"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:id="@+id/spinner_conductor_screen6_6"
                android:gravity="center"
                android:layout_height="40dp"/>



        </LinearLayout>



    </LinearLayout>


    <CheckBox
        android:layout_width="wrap_content"
        android:text="Стандарт"
        android:visibility="gone"
        android:id="@+id/checkbox_conductor_screen1_1"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/clear_bt_conductor_screen6"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_yellow_cart"
            android:gravity="center"
            android:text="Сброс"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/result_bt_conductor_screen6"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/rounded_green_cart"
            android:gravity="center"
            android:text="Отчёт"
            android:padding="4dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>






</LinearLayout>