<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle">

    <LinearLayout
        style="@style/screenStyle"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        tools:ignore="HardcodedText">

    <include layout="@layout/content_header" />

    <LinearLayout
        style="@style/cardStyle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:padding="25dp"
        tools:ignore="LabelFor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spinner11"
                style="@style/spinnerStyle"
                tools:listitem="@layout/item_spin" />
            <Spinner
                android:id="@+id/spinner12"
                style="@style/spinnerStyle"
                tools:listitem="@layout/item_spin" />
        </LinearLayout>
        <TextView
            android:id="@+id/input2Name"
            style="@style/baseStyle"
            android:text="Длина"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/input2"
                style="@style/inputStyle"
                android:importantForAutofill="no" />

            <Spinner
                android:id="@+id/spinner2"
                style="@style/spinnerStyle"
                tools:listitem="@layout/item_spin" />

        </LinearLayout>
        <TextView
            android:id="@+id/input3Name"
            style="@style/baseStyle"
            android:text="°t проводника"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/input3"
                style="@style/inputStyle"
                android:importantForAutofill="no" />

            <Spinner
                android:id="@+id/spinner3"
                style="@style/spinnerStyle"
                tools:listitem="@layout/item_spin" />
        </LinearLayout>
        <TextView
            android:id="@+id/input4Name"
            style="@style/baseStyle"
            android:text="Напряжения"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/input4"
                style="@style/inputStyle"
                android:importantForAutofill="no" />

            <Spinner
                android:id="@+id/spinner4"
                style="@style/spinnerStyle"
                tools:listitem="@layout/item_spin" />
        </LinearLayout>
        <TextView
            android:id="@+id/input5Name"
            style="@style/baseStyle"
            android:text="cos(ϕ)"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/input5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no" />
        <TextView
            android:id="@+id/input6Name"
            style="@style/baseStyle"
            android:text="Ток"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/input6"
                style="@style/inputStyle"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/spinner6"
                style="@style/spinnerStyle"
                android:text="Ампер"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/input7Name"
            style="@style/baseStyle"
            android:text="Мощность"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/input7"
                style="@style/inputStyle"
                android:importantForAutofill="no" />

            <TextView
                android:id="@+id/spinner7"
                style="@style/spinnerStyle"
                android:text="кВт"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:id="@+id/input8Name"
            style="@style/baseStyle"
            android:text="Сечение"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <EditText
                android:id="@+id/input8"
                style="@style/inputStyle"
                android:importantForAutofill="no" />
            <Spinner
                android:id="@+id/spinner81"
                style="@style/spinnerStyle"
                android:visibility="gone"
                tools:listitem="@layout/item_spin" />
            <Spinner
                android:id="@+id/spinner82"
                style="@style/spinnerStyle"
                tools:listitem="@layout/item_spin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckboxClicked" />
            <TextView
                style="@style/baseStyle"
                android:text="Стандарт"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">
        <Button
            android:id="@+id/clearBtn"
            android:layout_width="98dp"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_yellow_cart"
            android:gravity="center"
            android:text="Сброс"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/resultBtn"
            android:layout_width="98dp"
            android:layout_height="44dp"
            android:background="@drawable/rounded_green_cart"
            android:gravity="center"
            android:text="Отчёт"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/baseStyle"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@color/hint" />
    <LinearLayout
        style="@style/baseStyle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@color/back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inter_medium"
            android:text="Вес меди"
            android:textColor="@color/dark"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="null"
            android:textColor="@color/dark"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>