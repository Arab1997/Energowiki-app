<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:text="Конденсаторы"
        android:textColor="#000" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/capacity_report1_text1"
        android:padding="3dp"
        android:text="Параллельно"
        android:textColor="#000" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Ct = C1 + C2 + ... + Cn"
        android:textColor="#000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:textColor="#fff"
            android:gravity="center|left"
            android:padding="4dp"
            android:textStyle="bold"
            android:text="Результат расчета"
            android:background="#4BAF4F" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="40"
                android:padding="3dp"
                android:text="C общ"
                android:textColor="#000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="60"
                android:id="@+id/capacity_report1_text2"
                android:padding="3dp"
                android:text=""
                android:textColor="#000" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:gravity="center|left"
            android:padding="4dp"
            android:text="Данны для расчета"
            android:background="#4BAF4F"
            android:textStyle="bold"
            android:textColor="#fff" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/capacity_report1_liner1"
            android:layout_height="40dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:padding="3dp"
                android:id="@+id/capacity_report1_text3"
                android:textColor="#000" />



            <TextView
                android:layout_width="wrap_content"
                android:text=" µF"
                android:gravity="center"
                android:textColor="#000"
                android:layout_height="match_parent"/>





        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/capacity_report1_liner2"
            android:layout_height="40dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:padding="3dp"
                android:id="@+id/capacity_report1_text4"
                android:textColor="#000" />



            <TextView
                android:layout_width="wrap_content"
                android:text=" nF"
                android:gravity="center"
                android:textColor="#000"
                android:layout_height="match_parent"/>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/capacity_report1_liner3"
            android:layout_height="40dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:padding="3dp"
                android:id="@+id/capacity_report1_text5"
                android:textColor="#000" />



            <TextView
                android:layout_width="wrap_content"
                android:text=" nF"
                android:gravity="center"
                android:textColor="#000"
                android:layout_height="match_parent"/>





        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:weightSum="100"
    android:padding="8dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

<TextView
    android:layout_width="0dp"
    android:layout_weight="70"
    android:layout_height="44dp"/>



    <Button
        android:id="@+id/capacity_report1_close"
        android:layout_width="0dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:background="@drawable/rounded_green_cart"
        android:gravity="center"
        android:text="Ok"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>



</LinearLayout>