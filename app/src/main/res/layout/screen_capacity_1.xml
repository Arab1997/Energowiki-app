<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle"
    android:paddingTop="15dp"
    tools:ignore="HardcodedText">

    <include layout="@layout/content_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:padding="8dp"
        android:background="#F4F4F4"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:text="C общ"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="60"
            android:id="@+id/capacity_screen1_result1"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <LinearLayout
        style="@style/cardStyle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:padding="25dp"
        tools:ignore="LabelFor">

        <TextView
            android:id="@+id/title"
            style="@style/baseStyle"
            android:fontFamily="@font/inter_bold"
            android:text="Конденсаторы"
            android:textColor="@color/dark"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/input_capacity_screen1_1"
                style="@style/inputStyle"
                android:importantForAutofill="no" />

           <TextView
               android:layout_width="50dp"
               android:layout_height="match_parent"
               android:text="μF"
               android:gravity="center"
               android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/input_capacity_screen1_2"
                style="@style/inputStyle"
                android:importantForAutofill="no" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="nF"
                android:gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/input_capacity_screen1_3"
                style="@style/inputStyle"
                android:importantForAutofill="no" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="pF"
                android:gravity="center"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_weight="100"
            android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:text="Параллельно"
                    android:id="@+id/radiobt_capacity_screen1_1"
                    android:layout_gravity="center_horizontal"
                    android:checked="true"
                    android:textSize="14sp" />

                <RadioButton
                    android:layout_marginStart="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:text="Последовательно"
                    android:id="@+id/radiobt_capacity_screen1_2"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="Величину каждого элемента цели вводите через пробел(ы)"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/clear_bt_capacity_screen1"
            android:layout_width="98dp"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_yellow_cart"
            android:gravity="center"
            android:text="Сброс"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/result_bt_capacity_screen1"
            android:layout_width="98dp"
            android:layout_height="44dp"
            android:background="@drawable/rounded_green_cart"
            android:gravity="center"
            android:text="Отчёт"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>