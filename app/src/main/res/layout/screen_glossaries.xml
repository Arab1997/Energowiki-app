<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle"
    android:paddingTop="15sp">

    <include layout="@layout/content_header" />

    <include layout="@layout/content_search" />

    <in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:setIndexBarHighlightTextColorRes="@color/blue"
        app:setIndexBarTextColorRes="@color/black"
        app:setIndexTextSize="10"
        app:setIndexbarWidth="30"
        tools:listitem="@layout/item_glossary" />
</LinearLayout>