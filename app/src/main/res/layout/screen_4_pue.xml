<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle"
    android:background="#F4F4F4"
    android:orientation="vertical"
    android:padding="8dp"
    tools:ignore="HardcodedText">

    <include layout="@layout/content_header" />

    <LinearLayout
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            style="@style/baseStyle"
            android:layout_width="177dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:gravity="left"
            android:text="Макс. Длина"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        style="@style/cardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header1"
        android:orientation="vertical"
        tools:ignore="LabelFor">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layoutMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                tools:ignore="LabelFor">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="50"
                        android:background="@drawable/spinner_back">

                        <Spinner
                            android:id="@+id/spinner1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="60"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:tooltipText="dddd"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="50"
                        android:background="@drawable/spinner_back">

                        <Spinner
                            android:id="@+id/spinner2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="60"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:tooltipText="dddd"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="60"
                        android:background="@drawable/spinner_back">

                        <Spinner
                            android:id="@+id/spinner3"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_weight="60"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:tooltipText="dddd" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner_1_screen4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:text="Температура среды"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_weight="60">


                        <Spinner
                            android:id="@+id/spinner4"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="30"
                            android:background="@drawable/spinner_back"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:tooltipText="dddd"
                            tools:ignore="NestedWeights" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="60"
                        android:text="Коэффициент мощности"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40">

                        <Space
                            android:layout_width="30dp"
                            android:layout_height="40dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="10"
                            android:background="@drawable/back_of_input"
                            android:inputType="number"
                            android:lines="1"
                            android:outlineSpotShadowColor="#fff"
                            android:padding="4dp"
                            android:textColor="#000"
                            android:textColorHint="#000"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="60"
                        android:text="Количество проводников"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40">

                        <Space
                            android:layout_width="30dp"
                            android:layout_height="40dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="10"
                            android:background="@drawable/back_of_input"
                            android:inputType="number"
                            android:lines="1"
                            android:outlineSpotShadowColor="#fff"
                            android:padding="4dp"
                            android:textColor="#000"
                            android:textColorHint="#000"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:text="Потери"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input3"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="25"
                        android:background="@drawable/back_of_input"
                        android:inputType="number"
                        android:lines="1"
                        android:outlineSpotShadowColor="#fff"
                        android:padding="4dp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="14sp" />


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="30"
                        android:background="@drawable/spinner_back">

                        <Spinner
                            android:id="@+id/spinner5"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:tooltipText="dddd" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:text="Напряжение"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input4"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="25"
                        android:background="@drawable/back_of_input"
                        android:inputType="number"
                        android:lines="1"
                        android:outlineSpotShadowColor="#fff"
                        android:padding="4dp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="35"
                            android:gravity="center"
                            android:text="Вольт"
                            android:textSize="16dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <RadioButton
                        android:id="@+id/radioCurrent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:checked="true"
                        android:text="Текущий"
                        android:textSize="14dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input5"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="25"
                        android:background="@drawable/back_of_input"
                        android:inputType="number"
                        android:lines="1"
                        android:outlineSpotShadowColor="#fff"
                        android:padding="4dp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="35"
                            android:gravity="center"
                            android:text="Ампер"
                            android:textSize="16dp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <RadioButton
                        android:id="@+id/radioPower"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:text="Сила"
                        android:textSize="14dp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input6"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="25"
                        android:background="@drawable/back_of_input"
                        android:inputType="number"
                        android:lines="1"
                        android:outlineSpotShadowColor="#fff"
                        android:padding="4dp"
                        android:textColor="#000"
                        android:textColorHint="#000"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="35">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:text="кВт"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="60"
                        android:text="Свой поправочный коэффициент"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40">

                        <Space
                            android:layout_width="30dp"
                            android:layout_height="40dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input7"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="10"
                            android:background="@drawable/back_of_input"
                            android:inputType="number"
                            android:lines="1"
                            android:outlineSpotShadowColor="#fff"
                            android:padding="4dp"
                            android:textColor="#000"
                            android:textColorHint="#000"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:weightSum="100">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="40"
                        android:text="Сечение"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="60"
                        android:background="@drawable/spinner_back">

                        <Spinner
                            android:id="@+id/spinner6"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="30"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:tooltipText="dddd" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded">

                    <Button
                        android:id="@+id/clearBtn"
                        android:layout_width="98dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rounded_yellow_cart"
                        android:gravity="center"
                        android:text="Сброс"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/resultBtn"
                        android:layout_width="98dp"
                        android:layout_height="44dp"
                        android:background="@drawable/rounded_green_cart"
                        android:gravity="center"
                        android:text="Отчёт"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    style="@style/baseStyle"
                    android:layout_height="1dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/hint" />

                <LinearLayout
                    style="@style/baseStyle"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/back">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_medium"
                        android:text="Результат расчета"
                        android:textColor="@color/dark"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="0 B"
                        android:textColor="@color/dark"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
