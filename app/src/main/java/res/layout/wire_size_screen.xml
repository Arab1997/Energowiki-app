<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/screenStyle"
    tools:ignore="HardcodedText">

    <include layout="@layout/content_header" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/text"
            style="@style/baseStyle"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="0dp"
            android:gravity="left"
            android:text="Раздел"
            android:textColor="#0577D1"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/amper"
            style="@style/baseStyle"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/text"
            android:text="2 x400 мм²| 31 °C"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:textColor="#0577D1"
            android:textSize="16sp" />
    </RelativeLayout>


        <LinearLayout
            style="@style/cardStyle"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="8dp"
            tools:ignore="LabelFor">

            <LinearLayout
                android:id="@+id/x"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:listitem="@layout/item_spin" />
                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:listitem="@layout/item_spin" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">

                <Spinner
                    android:id="@+id/spinner3"
                    style="@style/bigSpinnerStyle"
                    tools:listitem="@layout/item_spin" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/input333Name"
                    style="@style/baseStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:layout_marginBottom="0dp"
                    android:paddingTop="10dp"
                    android:text="Температура окружающей среды"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <Spinner
                    android:id="@+id/spinner4"
                    style="@style/spinnerStyle"
                    android:layout_width="126dp"
                    tools:listitem="@layout/item_spin" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/baseStyle"
                    android:layout_height="wrap_content"
                    android:text="Количество проводников"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>


                <EditText
                    android:id="@+id/input1"
                    android:layout_marginStart="20dp"
                    android:layout_width="0dp"
                    android:layout_marginBottom="-6dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:hint="3"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp"
                    android:gravity="start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    style="@style/baseStyle"
                    android:layout_height="wrap_content"
                    android:text="Коэффициент мощности"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>


                <EditText
                    android:id="@+id/input2"
                    android:layout_marginStart="20dp"
                    android:layout_width="0dp"
                    android:layout_marginBottom="-6dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="0.85"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp"
                    android:gravity="start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="Длина"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        tools:ignore="SmallSp" />


                </LinearLayout>

                <EditText
                    android:id="@+id/input3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="24"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="-6dp"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp"
                    android:gravity="start"/>


                <Spinner
                    android:id="@+id/spinner5"
                    style="@style/spinnerStyle"
                    android:layout_width="88dp"
                    tools:listitem="@layout/item_spin" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="Напряжение"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/input4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-6dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="start"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="5"
                    android:text="12"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp" />


                <TextView
                    android:layout_height="wrap_content"
                    android:text="Волты"
                    style="@style/spinnerStyle"
                    android:layout_width="88dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="37dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="Капля"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/input5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="30dp"
                    android:text="4"
                    android:layout_marginBottom="-6dp"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp"
                    android:gravity="start"/>


                <Spinner
                    android:id="@+id/spinner6"
                    style="@style/spinnerStyle"
                    android:layout_width="78dp"
                    tools:listitem="@layout/item_spin" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_margin="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleY="0.7"
                        android:scaleX="0.7"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="Текущий"
                        tools:ignore="SmallSp" />

                </LinearLayout>
                <EditText
                    android:id="@+id/input6"
                    android:layout_marginStart="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="-6dp"
                    android:hint="0"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp"
                    android:gravity="start"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ампер"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:layout_margin="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleY="0.7"
                        android:scaleX="0.7"
                        android:textSize="12sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="Сила"
                        tools:ignore="SmallSp" />

                </LinearLayout>
                <EditText
                    android:id="@+id/input7"
                    android:layout_marginStart="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="-6dp"
                    android:hint="0"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:longClickable="true"
                    android:maxLength="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp"
                    android:gravity="start"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="кВт"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    style="@style/baseStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Определяемый Пользователем Поправочный Коэффициент"
                    android:textColor="@color/black"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/input8"
                    android:layout_marginStart="20dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:text="1"
                    android:layout_marginBottom="-6dp"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="5"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp"
                    android:gravity="start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    style="@style/baseStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Рассмотрим автоматический выключатель"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkBox"
                    android:layout_marginStart="20dp"
                    android:layout_width="0dp"
                    android:gravity="center"

                    android:layout_height="match_parent"
                    android:layout_weight="0.4"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="37dp">

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="Резерв"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        tools:ignore="SmallSp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/input9"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="-6dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="start"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:longClickable="false"
                    android:maxLength="5"
                    android:text="12"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hint"
                    android:textSize="12sp" />


                <TextView
                    android:layout_height="wrap_content"
                    android:text="%"
                    style="@style/spinnerStyle"
                    android:layout_width="88dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:gravity="center"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <TextView
                    style="@style/baseStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Размер провода выберите последний"
                    android:textColor="@color/yellow"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">

            <Button
                android:id="@+id/clearBtn"
                android:layout_width="98dp"
                android:layout_height="44dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_yellow_cart"
                android:gravity="center"
                android:text="Сброс"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/resultBtn"
                android:layout_width="98dp"
                android:layout_height="44dp"
                android:background="@drawable/rounded_green_cart"
                android:gravity="center"
                android:text="Отчёт"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/baseStyle"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@color/hint" />

        <LinearLayout
            style="@style/baseStyle"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@color/back">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/inter_medium"
                android:text="Результат расчета"
                android:textColor="@color/dark"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="0 B"
                android:textColor="@color/dark"
                android:textSize="20sp" />
        </LinearLayout>






</LinearLayout>